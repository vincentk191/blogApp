doctype html
html
   head
      title BlogApp | Sign Up
      meta(charset='utf-8')
      meta(name="viewport" content="width=device-width, initial-scale=1")
      link(rel='stylesheet', type='text/css', href='/css/uikit.min.css')
      script(src="js/uikit.min.js")
      script(src="js/uikit-icons.min.js")
      script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js')
   body.container-fluid
      nav.uk-navbar-container.uk-navbar(uk-navbar='mode: click')
         .uk-navbar-left
            ul.uk-navbar-nav#navigation
               li
                  a(href='/') Blog app
         .uk-navbar-right
            ul.uk-navbar-nav#navigation
               li
                  a(href='/login') Login
      .row(style='margin-left: 10px')
         h1.display-1 Sign Up
         form.uk-form-horizontal.uk-margin-large(action='/users/new' method='POST' style='text-align: left')
            .uk-margin
               label.uke-form-label(for="form-horizontal-text") Username
                  input.uk-input#username(type="text", name='username', placeholder='Username, (will be shown as your main name)',value=`${username}`, autocomplete='off' required)
                  if userMessage
                     .uk-alert-danger(uk-alert='')
                        a.uk-alert-close(uk-close='') 
                        p= userMessage 
            .uk-margin
               label.uke-form-label(for="form-horizontal-text") Email
                  input.uk-input#email(type="text", name='email', placeholder='Enter email..',value=`${email}`, autocomplete='off' required)
                  if emailMessage
                     .uk-alert-danger(uk-alert='')
                        a.uk-alert-close(uk-close='') 
                        p #{emailMessage.message}
            .uk-margin
               label.uke-form-label(for="form-horizontal-text") Password
                  input.uk-input#password(type="password", name='password1', placeholder='Enter password..', autocomplete='off' required)
                  if pwdMessage
                     .uk-alert-danger(uk-alert='')
                        a.uk-alert-close(uk-close='') 
                        p #{pwdMessage.message}
            .uk-margin
               label.uke-form-label(for="form-horizontal-text") Confirm Password
                  input.uk-input#confirmpwd(type="password", name='password2', placeholder='Enter password..', autocomplete='off' required)
                  if message
                     .uk-alert-danger(uk-alert='')
                        a.uk-alert-close(uk-close='') 
                        p= message 
            button.uk-button.uk-button-default(type='submit') Create Account
